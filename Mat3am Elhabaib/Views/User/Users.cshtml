@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="users-container container py-5">
    <div class="text-center mb-4">
        <h2 class="text-warning fw-bold" style="font-family: 'Times New Roman', serif;">Users List</h2>
        <hr class="bg-warning mx-auto" style="width: 100px; height: 3px;">
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-bordered text-center align-middle rounded-3 overflow-hidden">
            <thead class="table-warning text-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #111; /* Dark background */
        color: #fff;
    }

    .users-container {
        background-color: #1c1c1c;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 0 15px rgba(255, 204, 0, 0.2);
    }

    .table {
        border: none;
    }

    .table th {
        font-size: 1rem;
        background-color: #ffdd57 !important;
    }

    .table td {
        background-color: #222 !important;
        color: #eee;
        vertical-align: middle;
    }

    .table-striped > tbody > tr:nth-of-type(odd) > * {
        background-color: #1a1a1a !important;
    }

    .table-striped > tbody > tr:hover > * {
        background-color: #333 !important;
    }

    h2 {
        font-size: 2rem;
    }

    body {
        padding-top: 90px; /* علشان يبعد المحتوى عن الـ navbar */
    }
</style>
