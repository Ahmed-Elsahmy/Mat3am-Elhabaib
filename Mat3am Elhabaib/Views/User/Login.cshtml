@using Mat3am_Elhabaib.DataBase.ModelVM
@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="login-section">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-5 p-4 bg-dark rounded-4 shadow-lg login-form-container">
            <h2 class="text-center text-light mb-4" style="color: #FCB454 !important;">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login To Your Account
            </h2>

            <form asp-action="Login" asp-controller="User" class="px-2">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label text-light">User Name</label>
                    <input asp-for="UserName" class="form-control login-input" placeholder="Enter your username" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-light">Password</label>
                    <input asp-for="Password" class="form-control login-input" type="password" placeholder="Enter your password" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-warning small"></span>
                </div>

                <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label text-light" asp-for="RememberMe">
                            Remember Me
                        </label>
                    </div>
                    <a class="small text-warning" href="@Url.Action("Register", "User")">Don't have an account?</a>
                </div>

                <button type="submit" class="btn w-100 login-btn text-dark fw-bold">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .login-section {
        background: url('https://img.freepik.com/free-photo/blurred-city-lights_23-2148139066.jpg?t=st=1745883421~exp=1745887021~hmac=53c2d30e71bd3dd6821067e95bca63282fc390449b1361a9869b45b2a73f82c6&w=996') no-repeat center center fixed;
        background-size: cover;
        position: relative;
        min-height: 100vh;
        padding-top: 100px;
    }

    .login-form-container {
        background-color: rgba(0, 0, 0, 0.85);
        border: 1px solid #FCB454;
    }

    .login-input {
        background-color: transparent;
        border: 1px solid #FCB454;
        color: #FFF8E7;
    }

        .login-input::placeholder {
            color: #ddd;
        }

        .login-input:focus {
            background-color: rgba(255, 255, 255, 0.05);
            color: #FFF8E7;
            box-shadow: 0 0 5px #FCB454;
            border-color: #FFF8E7;
        }

    .login-btn {
        background-color: #FCB454;
        color: #000;
        border: none;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .login-btn:hover {
            background-color: #e3a93a;
            box-shadow: 0 0 10px #FCB454;
        }

    .form-check-input:checked {
        background-color: #FCB454;
        border-color: #FCB454;
    }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
