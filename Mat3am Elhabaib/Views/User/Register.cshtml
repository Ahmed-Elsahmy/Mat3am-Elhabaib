@using Mat3am_Elhabaib.DataBase.ModelVM
@model RegesterVM
@{
    ViewData["Title"] = "Register";
}

<div class="register-section">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-5 p-4 bg-dark rounded-4 shadow-lg register-form-container">
            <h2 class="text-center text-light mb-4" style="color: #FCB454 !important;">
                <i class="bi bi-person-plus-fill me-2"></i>Create An Account
            </h2>

            <form asp-action="Register" asp-controller="User" class="px-2">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="@Model.UserName" class="form-label text-light">User Name</label>
                    <input asp-for="@Model.UserName" class="form-control register-input" placeholder="Enter username" />
                    <span asp-validation-for="@Model.UserName" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label text-light">Password</label>
                    <input asp-for="@Model.Password" type="password" class="form-control register-input" placeholder="Enter password" />
                    <span asp-validation-for="@Model.Password" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ConfirmPassword" class="form-label text-light">Confirm Password</label>
                    <input asp-for="@Model.ConfirmPassword" type="password" class="form-control register-input" placeholder="Confirm password" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Location" class="form-label text-light">Location</label>
                    <input asp-for="@Model.Location" class="form-control register-input" placeholder="Your location" />
                    <span asp-validation-for="@Model.Location" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label text-light">Email</label>
                    <input asp-for="@Model.Email" class="form-control register-input" placeholder="Your email" />
                    <span asp-validation-for="@Model.Email" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label text-light">Phone Number</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control register-input" placeholder="Your phone number" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-warning small"></span>
                </div>

                <button type="submit" class="btn w-100 register-btn text-dark fw-bold">
                    Create
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .register-section {
        position: relative;
        min-height: 100vh;
        padding-top: 100px;
    }

        .register-section::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('https://img.freepik.com/free-photo/restaurant-interior_1127-3394.jpg?t=st=1745881542~exp=1745885142~hmac=65c2e88c971151c393850b5c2f647a2e35977ae847188c77d5b48d8efdefca27&w=996');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: blur(4px);
            opacity: 0.7;
            z-index: -2;
        }

        .register-section::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5); /* dark overlay */
            z-index: -1;
        }

    .register-form-container {
        background-color: rgba(0, 0, 0, 0.85);
        border: 1px solid #FCB454;
    }

    .register-input {
        background-color: transparent;
        border: 1px solid #FCB454;
        color: #FFF8E7;
    }

        .register-input::placeholder {
            color: #ccc;
        }

        .register-input:focus {
            background-color: rgba(255, 255, 255, 0.05);
            color: #FFF8E7;
            box-shadow: 0 0 5px #FCB454;
            border-color: #FFF8E7;
        }

    .register-btn {
        background-color: #FCB454;
        color: #000;
        border: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

        .register-btn:hover {
            background-color: #e3a93a;
            box-shadow: 0 0 10px #FCB454;
        }

    label {
        font-weight: 500;
    }

    .text-warning {
        color: #FCB454 !important;
    }
</style>
