@using Mat3am_Elhabaib.DataBase.ModelVM
@model RegesterVM
@{
    ViewData["Title"] = "AddAdmin";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="blurred-background">
    <div class="form-section d-flex justify-content-center align-items-center">
        <div class="col-md-6 p-5 shadow-lg rounded form-container bg-dark bg-opacity-75 text-light">
            <h2 class="text-center text-warning mb-4" style="font-family:'Segoe UI', sans-serif;">
                <i class="bi bi-person-plus-fill me-2"></i> Create Admin Account
            </h2>

            <form asp-action="AddAdmin" asp-controller="User">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserName">User Name</label>
                    <input asp-for="UserName" class="form-control styled-input" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password">Password <i class="bi bi-lock-fill"></i></label>
                    <input asp-for="Password" type="password" class="form-control styled-input" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword">Confirm Password <i class="bi bi-lock-fill"></i></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control styled-input" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location">Location <i class="bi bi-geo-alt-fill"></i></label>
                    <input asp-for="Location" class="form-control styled-input" />
                    <span asp-validation-for="Location" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email">Email <i class="bi bi-envelope-fill"></i></label>
                    <input asp-for="Email" class="form-control styled-input" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PhoneNumber">Phone Number <i class="bi bi-telephone-fill"></i></label>
                    <input asp-for="PhoneNumber" class="form-control styled-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning w-100 py-2 fs-5 rounded-3">
                        <i class="bi bi-person-plus me-1"></i> Add Admin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: #111;
    }

    .blurred-background::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-image: url('https://img.freepik.com/free-photo/restaurant-interior_1127-3394.jpg');
        background-size: cover;
        background-position: center;
        filter: blur(7px);
        z-index: -1;
        opacity: 0.8;
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .styled-input {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #FFC107;
        color: #fff;
    }

        .styled-input::placeholder {
            color: #aaa;
        }

        .styled-input:focus {
            background-color: rgba(255, 255, 255, 0.15);
            color: #fff;
            box-shadow: none;
            border-color: #FFEB3B;
        }

    label {
        font-weight: bold;
        color: #eee;
    }

    .form-section {
        min-height: 100vh;
    }
</style>
