@using Mat3am_Elhabaib.DataBase.ModelVM
@model EditUser
@{
    ViewData["Title"] = "EditUserProfile";
}


<!-- Navigation Bar -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="blurred-background">
    <!-- Register Form -->
    <div class="form-section d-flex justify-content-center align-items-center">
        <div class="col-md-5 p-4 shadow-sm rounded form-container" style="padding-top:0px; margin-bottom:0px">
            <p class="text-brown text-center create-account-heading" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #EFEEEA;         font:bold;
 "> Edit Your Profile 
            <form asp-action="EditUserProfile" asp-controller="User" style="border: none; padding-left:15px; padding-right:15px; margin-top:5px; ">
                <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div>
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="control-label text-darker-brown">User Name</label>
                    <input asp-for="UserName" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="OldPasswrd" class="control-label text-darker-brown"> Old Password <i class="bi bi-lock"></i></label>
                    <input asp-for="OldPasswrd"class="form-control transparent-input border-dark-brown"
         type="password"
                           autocomplete="new-password" />                    <span asp-validation-for="OldPasswrd" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="control-label text-darker-brown"> New Password <i class="bi bi-lock"></i></label>
                    <input asp-for="NewPassword" class="form-control transparent-input border-dark-brown" type="password" autocomplete="off" />
                    <span asp-validation-for="NewPassword" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label text-darker-brown"> Confirm Password <i class="bi bi-lock"></i></label>
                    <input asp-for="ConfirmPassword" class="form-control transparent-input border-dark-brown" type="password" autocomplete="off" />
                    <span asp-validation-for="ConfirmPassword" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Location" class="control-label text-darker-brown">Location <i class="bi bi-geo-alt-fill"></i></label>
                    <input asp-for="Location" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="Location" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label text-darker-brown"> Email <i class="bi bi-envelope"></i></label>
                    <input asp-for="Email" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="control-label text-darker-brown">Phone Number <i class="bi bi-phone"></i></label>
                    <input asp-for="PhoneNumber" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-4">
                    <input class="button1 w-100" type="submit" value="Update" />
                </div>
                <div class="form-group mb-4">
                    <a asp-action="Index" asp-controller="Home" class="button1 w-100"> Cancel </a>
                </div>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
