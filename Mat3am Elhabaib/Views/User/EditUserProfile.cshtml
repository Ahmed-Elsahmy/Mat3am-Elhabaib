@using Mat3am_Elhabaib.DataBase.ModelVM
@model EditUser
@{
    ViewData["Title"] = "Edit User Profile";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="blurred-background">
    <div class="form-section d-flex justify-content-center align-items-center">
        <div class="col-md-5 p-4 shadow-sm rounded form-container">
            <h2 class="text-brown text-center create-account-heading mb-4" style="font-family:'Times New Roman', serif;">
                Edit Your Profile <i class="bi bi-person-lines-fill"></i>
            </h2>

            <form asp-action="EditUserProfile" asp-controller="User" style="padding: 0 15px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserName" class="text-darker-brown">User Name</label>
                    <input asp-for="UserName" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="OldPasswrd" class="text-darker-brown">Old Password <i class="bi bi-lock"></i></label>
                    <input asp-for="OldPasswrd" class="form-control transparent-input border-dark-brown" type="password" autocomplete="new-password" />
                    <span asp-validation-for="OldPasswrd" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="text-darker-brown">New Password <i class="bi bi-lock"></i></label>
                    <input asp-for="NewPassword" class="form-control transparent-input border-dark-brown" type="password" autocomplete="off" />
                    <span asp-validation-for="NewPassword" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="text-darker-brown">Confirm Password <i class="bi bi-lock"></i></label>
                    <input asp-for="ConfirmPassword" class="form-control transparent-input border-dark-brown" type="password" autocomplete="off" />
                    <span asp-validation-for="ConfirmPassword" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="text-darker-brown">Location <i class="bi bi-geo-alt-fill"></i></label>
                    <input asp-for="Location" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="Location" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="text-darker-brown">Email <i class="bi bi-envelope"></i></label>
                    <input asp-for="Email" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="text-darker-brown">Phone Number <i class="bi bi-phone"></i></label>
                    <input asp-for="PhoneNumber" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-dark-brown"></span>
                </div>

                <div class="form-group mb-4">
                    <input class="button1 w-100" type="submit" value="Update" />
                </div>

                <div class="form-group mb-2">
                    <a asp-action="Index" asp-controller="Home" class="button1 w-100 text-center">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    body {
        height: 100%;
        overflow-x: hidden;
        margin: 0;
        padding: 100px 120px 100px 0;
        font-weight: bold;
    }

    .blurred-background {
        position: relative;
        width: 100vw;
        height: 100vh;
        z-index: 1;
    }

        .blurred-background::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('https://img.freepik.com/free-photo/restaurant-interior_1127-3394.jpg?t=st=1745881542~exp=1745885142~hmac=65c2e88c971151c393850b5c2f647a2e35977ae847188c77d5b48d8efdefca27&w=996');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: blur(7px);
            z-index: -1;
            opacity: 0.8;
        }

    .form-section {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        position: relative;
        z-index: 1;
    }

    .form-container {
        max-width: 600px;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
    }

    .text-brown, .text-darker-brown, .text-dark-brown {
        color: #F8F4E1;
    }

    .border-dark-brown {
        border-color: #FCB454;
    }

    .transparent-input {
        background-color: rgba(255, 255, 255, 0.1);
        color: #FCB454;
        border: 1px solid #FCB454;
        transition: background-color 0.3s ease;
    }

        .transparent-input:focus {
            background-color: rgba(255, 255, 255, 0.1);
            color: #FCB454;
            outline: none;
            box-shadow: none;
            border-color: #FFF8E7;
        }

        .transparent-input::placeholder {
            color: #FCB454;
        }

    .create-account-heading {
        font-size: 28px;
        color: #EFEEEA;
    }

    .button1 {
        background-color: #FCB454;
        border: none;
        color: #FFF8E7;
        padding: 10px 20px;
        font-size: 20px;
        border-radius: 10px;
        display: inline-block;
        text-decoration: none;
    }

        .button1:hover {
            box-shadow: 0 12px 16px rgba(0, 0, 0, 0.24), 0 17px 50px rgba(0, 0, 0, 0.19);
            transition: all 0.3s ease;
        }
</style>
