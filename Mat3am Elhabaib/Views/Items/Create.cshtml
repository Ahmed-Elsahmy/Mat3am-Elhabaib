@model Mat3am_Elhabaib.Models.Items
@{
    ViewData["Title"] = "Create";
}

<section class="py-5 mt-5">
    <!-- margin top to avoid overlapping navbar -->
    <div class="container">
        <h2 class="text-warning text-center mb-4">Create Item</h2>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 bg-black p-4 rounded shadow-sm border border-warning">

                <form asp-action="Create" asp-controller="Items" method="post" enctype="multipart/form-data">

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="text-white">Item Name:</label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-warning" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="text-white">Description:</label>
                        <textarea asp-for="Description" rows="3" class="form-control bg-dark text-white border-warning"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="text-white">Upload New Images:</label>
                        <input type="file" name="images" multiple class="form-control bg-dark text-white border-warning" />
                        <small class="text-white-50">You can upload multiple images.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="text-white">Price:</label>
                        <input asp-for="Price" class="form-control bg-dark text-white border-warning" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="text-white">Category:</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Category" class="form-control bg-dark text-white border-warning"></select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-warning text-dark px-4">Create Item</button>
                    </div>
                </form>

           

            </div>
        </div>
    </div>
</section>