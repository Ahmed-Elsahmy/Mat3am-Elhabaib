@using Mat3am_Elhabaib.DataBase.ModelVM
@model EditReviewVm
@{
    ViewData["Title"] = "Edit";
}
<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Review Us.. </h2>
        @*                 <p>Book a Table</p>
        *@
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <form asp-action="Edit" asp-controller="Review" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row gy-4">
                <div class="col-lg-4 col-md-6">
                    <label asp-for="@Model.Rate" class="control-label "></label>
                    <select asp-for="@Model.Rate" class="form-control" style="color: #674636; background-color: #F7EFE5;">
                        <option value="" disabled selected>Select Rate</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>

                    </select>
                    <span asp-validation-for="@Model.Rate" class="text-bg-danger"></span>
                </div>
                <div class="col-lg-4 col-md-6">
                    <label asp-for="@Model.Comment" class="control-label"> Comment :  </label>
                    <textarea asp-for="@Model.Comment" class="form-control" placeholder="Write An Review..."></textarea>
                    <span asp-validation-for="@Model.Comment" class="text-bg-danger"></span>
                </div>

            </div>


            <div class="text-center mt-3">
                <input class="btn btn-success" type="submit" value="Edit" />

            </div>
        </form><!-- End Reservation Form -->

    </div>

</section>