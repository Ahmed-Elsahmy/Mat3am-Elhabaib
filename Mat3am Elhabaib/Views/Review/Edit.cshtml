@using Mat3am_Elhabaib.DataBase.ModelVM
@model EditReviewVm
@{
    ViewData["Title"] = "Edit Review";
}

<section class="review-edit-section">
    <div class="container review-card">
        <h2 class="text-warning text-center mb-4" style="font-family: 'Times New Roman', serif;">
            <i class="bi bi-star-half me-2"></i> Edit Your Review
        </h2>

        <form asp-action="Edit" asp-controller="Review" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="Rate" class="form-label text-light">Rate</label>
                    <select asp-for="Rate" class="form-control rounded shadow-sm"
                            style="background-color: #F7EFE5; color: #674636;">
                        <option value="" disabled selected>Select Rate</option>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="Rate" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Comment" class="form-label text-light">Comment</label>
                    <textarea asp-for="Comment" class="form-control rounded shadow-sm"
                              placeholder="Write your updated review..."></textarea>
                    <span asp-validation-for="Comment" class="text-danger small"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning text-dark fw-semibold px-4 py-2 rounded-pill shadow">
                    <i class="bi bi-pencil-square me-1"></i> Update Review
                </button>
            </div>
        </form>
    </div>
</section>

<style>
    body {
        background-color: #222222;
        padding-top: 90px; /* 👈 تأكد من وضوح الكارت أسفل الناف بار */
    }

    .review-edit-section {
        padding: 40px 0;
    }

    .review-card {
        background-color: #181C14;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.05);
        max-width: 800px;
        margin: auto;
    }

    .form-label {
        font-weight: 600;
        font-size: 16px;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(245, 196, 94, 0.5);
        border-color: #F5C45E;
    }

    .btn-warning:hover {
        background-color: #e0ac3c;
        color: #222;
    }

    .text-warning {
        color: #F5C45E !important;
    }
</style>
