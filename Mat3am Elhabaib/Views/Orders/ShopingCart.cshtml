@using Mat3am_Elhabaib.DataBase.ModelVM
@model ShoppingCartVm
@{
    ViewData["Title"] = "ShopingCart";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2 style="color:white">Your shopping cart summary</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Payment Method</th>
                    <th>Selected amount</th>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShopingItems)
                {
                    <tr>
                        <td>Cash on delivery</td>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.ShoppingCartItems.Name</td>
                        <td class="align-middle">@item.ShoppingCartItems.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount * item.ShoppingCartItems.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                               asp-route-id="@item.ShoppingCartItems.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            |
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                               asp-route-id="@item.ShoppingCartItems.Id">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.ShoppingCartTotal.ToString("c");
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-outline-primary" asp-action="CompleteOrder" style="border:1px solid white;border-radius:30px;">
                    Complete order
                </a>
                <div id="paypal-btn"></div>
                <span style="padding:5px"></span>
                <a class="btn btn-outline-success" asp-controller="Items" asp-action="Index" style="border:1px solid white;border-radius:30px;">
                    Add more items
                </a>
            </div>
        </div>

    </div>
</div>
<style>
    .table{
        color:white;
    }
</style>

