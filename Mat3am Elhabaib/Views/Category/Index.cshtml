@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- Space below navbar -->
<div style="height: 80px;"></div>

<div class="container category-container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning fw-bold mb-0">Categories</h2>
        <a asp-controller="Category" asp-action="Create" class="btn btn-warning text-dark fw-bold shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered text-center table-dark table-hover rounded-3 overflow-hidden">
            <thead class="table-warning text-dark">
                <tr>
                    <th class="fs-5">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-light fs-6">@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #1b1b1b;
        color: #fff;
    }

    .category-container {
        background-color: #222;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.2);
    }

    table.table-dark td {
        background-color: #181c14 !important;
        border-color: #2c2f26;
    }

    table thead th {
        font-weight: bold;
        letter-spacing: 1px;
    }

    a.btn-warning {
        background-color: #f5c045;
        border: none;
    }

        a.btn-warning:hover {
            background-color: #e4b032;
            color: black;
        }
</style>
