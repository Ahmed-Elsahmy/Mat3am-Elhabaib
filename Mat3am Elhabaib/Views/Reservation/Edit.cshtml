@using Mat3am_Elhabaib.DataBase.ModelVM
@model EditResevationVm
@{
    ViewData["Title"] = "Edit";
}

<section id="edit-reservation" style="padding-top: 100px; padding-bottom: 50px;">
    <div class="container p-4 rounded-4 shadow" style="background-color: #181C14;">
        <h2 class="text-center mb-4" style="color: #F5C45E; font-family: 'Times New Roman', serif;">
            <i class="bi bi-pencil-square me-2"></i> Edit Your Reservation
        </h2>

        <form asp-action="Edit" asp-controller="Reservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row g-4">
                <!-- Number Of Tables -->
                <div class="col-lg-4 col-md-6">
                    <label asp-for="NumberOftables" class="form-label text-light">Number Of Tables</label>
                    <select asp-for="NumberOftables" class="form-control bg-light text-dark rounded-3">
                        <option value="" disabled>Select Number Of Tables</option>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option value="@i" selected="@(Model.NumberOftables == i)">@i</option>
                        }
                    </select>
                    <span asp-validation-for="NumberOftables" class="text-danger"></span>
                </div>

                <!-- Time and Date -->
                <div class="col-lg-4 col-md-6">
                    <label asp-for="time" class="form-label text-light">Time And Date</label>
                    <input asp-for="time" type="datetime-local" class="form-control bg-light text-dark rounded-3"
                           value="@Model.time.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="time" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="col-lg-4 col-md-6">
                    <label asp-for="PhoneNumber" class="form-label text-light">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control bg-light text-dark rounded-3"
                           placeholder="Enter your phone number..." />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-4 py-2 fw-bold rounded-pill text-dark shadow">
                    <i class="bi bi-check-circle me-1"></i> Update Reservation
                </button>
            </div>
        </form>
    </div>
</section>

<style>
    body {
        background-color: #222222;
    }

    ::placeholder {
        color: #888 !important;
    }

    select.form-control:invalid {
        color: #888;
    }

    select.form-control option {
        color: #000;
    }
</style>
